{
  "name": "@r20sd/adnd1e-beacon",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "sandbox-server": "vite --port 7620 --mode staging",
    "sandbox": "run-s build-scss sandbox-server",
    "build": "run-s build-scss && vite build",
    "build-scss": "sass ./src/rolltemplates/host.scss ./public/host.css --no-source-map --no-charset",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@roll20-official/beacon-sdk": "^0.0.12",
    "handlebars": "^4.7.8",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "pinia": "^2.2.2",
    "uuid": "^9.0.1",
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.4",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.27.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "vite": "^5.4.2",
    "vite-plugin-vue-devtools": "^7.3.8"
  }
}